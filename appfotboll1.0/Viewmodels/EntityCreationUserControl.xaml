<UserControl x:Class="appfotball5.EntityCreationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" Background='AliceBlue'>
    <Grid>
        <StackPanel>
            <!-- Common Fields -->
            <TextBlock Text="Entity Type" Margin="5"/>
            <ComboBox x:Name="entityTypeComboBox" Width="200" Margin="5">
                <ComboBoxItem Content="Team"/>
                <ComboBoxItem Content="Player"/>
                <ComboBoxItem Content="Match"/>
            </ComboBox>

            <!-- Entity-Specific Fields (Example: TeamName) -->
            <TextBlock Text="Name" Margin="5"/>
            <TextBox x:Name="entitySpecificTextBox" Width="200" Margin="5"/>

            <!-- Button to Create Entity -->
            <Button Content="Create Entity" Width="100" Height="30" Margin="5" Click="CreateEntity_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
